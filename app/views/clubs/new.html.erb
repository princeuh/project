	<%= f.label :Target_Amount %><br>
	<%= f.number_field :fund_target %><br>

	<%= f.label :Invested_Amount%><br>
	<%= f.number_field :amt_invested %><br>

	<%= f.label :Member_Count %><br>
	<%= f.number_field :number_of_members %><br>
