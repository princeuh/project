<div id="club-info-one">
	<h4  class="contact-header">  CREATE A NEW CLUB </h4>

	<%= f.label :Club_name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :Country_of_Orign %><br>
	<%= f.select :focus_country, [ 'Continental USA', 'Detroit' 
		'Algeria', 'Angola', 'Benin', 'Botswana', 'Burkina Faso', 'Burundi', 'Cabo Verde', 'Cameroon', 'Central African Republic (CAR)', 'Chad', 'Comoros', 'Democratic Republic of the Congo
