<% provide(:title, "Add Employee") %>
<div class="content">
<div class="forms-investor">
	<h4> Add Employee</h4>
<%= form_for(@employee, url: employee_account_path) do |f| %>
	<div id="firstname-emp">
	<%= f.label :firstname %><br>
	<%= f.text_field :firstname %><br>
</div>

	<div id="lastname-emp">
	<%= f.label :lastname%><br>
	<%= f.text_field :lastname %><br>
</div>

	<div id="role-emp">
	<%= f.label :role %><br>
	<%= f.select :role, ['CEO', 'Business Manager', 'Software Engineer', 'Fundraising Coordinator'] %><br>
</div>

	<div id="dept-empl">
	<%= f.label :department %><br>
	<%= f.select :department, ['Office of the Chief Executive Officer', 'Administration and Human Resources', 'Operations', 'Project Management', 'Software Management', 'Accounting and Financing', 'Marketing', 'Public Relations', 'Information and Broadcasting - Press'] %><br>
</div>

<div id="cate-empl">
	<%= f.label :job_category %><br>
	<%= f.select :job_category, ['I', 'II', 'III', 'IV', 'V', 'VI', 'VII', 'VIII', 'IX', 'X'] %><br>
</div>

<div id="location-empl">

	<%= f.label :job_location %><br>
	<%= f.text_field :job_location %><br>
</div>

<div id="rep-emp">
	<%= f.label :reports_to %><br>
	<%= f.text_field :reports_to %><br>
</div>

	<%= f.label :section %><br>
	<%= f.text_field :section %><br>

	<%= f.label :contact %><br>
	<%= f.text_field :contact_number %><br>

	<%= f.label :employee_PID %><br>
	<%= f.text_field :employee_pid %><br>

	<%= f.label :email %><br>
	<%= f.email_field :email %><br>


	<%= f.label :password %><br>
	<%= f.password_field :password %><br>

	<%= f.label :password_confirmation %><br>
	<%= f.password_field :password_confirmation %><br>

	<%= f.label :is_admin %><br>
	<%= f.check_box :is_admin %><br> 

	<%= f.submit "Add Employee" %>

<% end %>

</div>
<%= link_to "All Employees", employees_path, :class => "app-links" %>
	<%= link_to "Edit", edit_employee_path(@employee),  :class => "app-links" %>
</div>