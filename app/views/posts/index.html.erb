<% provide(:title, "News") %>
<div class="content">
	<h4  class="contact-header" style="margin-top: 100px;"> NEWS </h4>

<%  @posts.each do |post| %>

<div class="flip-container">
	<div class="flipper">
		<div class="front">	
	<%= image_tag post.picture.url if post.picture? %><br>

	<p> <%= post.title %></p>
	<p style="width: 100px; overflow:hidden; text-overflow:ellipsis;"><%= post.content %></p>

</div>
<div class="back">
	<p><%= post.content %></p>
	<% if employee_logged_in? %>
	<%= link_to "Edit", edit_post_path(post) %>
	<%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    <% end %>
</div>
</div>
</div>

<% end %>
</div>